<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_form_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit.faris.jewelry</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general']" position="inside">
                <group string="Jewelry Information" attrs="{'invisible': [('is_jewelry', '=', False)]}">
                    <field name="is_jewelry"/>
                    <field name="jewelry_type"/>
                    <field name="karat"/>
                    <field name="weight_grams"/>
                    <field name="stone_count"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
